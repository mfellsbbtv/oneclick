# OneClick Account Provisioning Environment Variables
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://oneclick:oneclick_dev_password@localhost:5432/oneclick

# Redis (for BullMQ)
REDIS_URL=redis://localhost:6379

# Authentication (OIDC)
ADMIN_OIDC_ISSUER=https://your-identity-provider.com
ADMIN_OIDC_CLIENT_ID=your-client-id
ADMIN_OIDC_CLIENT_SECRET=your-client-secret
ADMIN_OIDC_REDIRECT_URI=http://localhost:3000/api/auth/callback

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# JWT
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=7d

# Google Workspace
GOOGLE_ADMIN_DELEGATED_USER=admin@yourdomain.com
GOOGLE_CREDENTIALS_JSON=/path/to/google-credentials.json
GOOGLE_WORKSPACE_CUSTOMER_ID=C12345678

# Slack
SLACK_SCIM_TOKEN=your-slack-scim-token
SLACK_WORKSPACE_ID=T12345678
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Microsoft 365
MS_GRAPH_TENANT_ID=your-tenant-id
MS_GRAPH_CLIENT_ID=your-client-id
MS_GRAPH_CLIENT_SECRET=your-client-secret
MS_GRAPH_REDIRECT_URI=http://localhost:3000/api/auth/microsoft/callback

# ClickUp
CLICKUP_API_TOKEN=your-clickup-token
CLICKUP_WORKSPACE_ID=12345678

# Atlassian (Jira/Confluence)
ATLASSIAN_SCIM_TOKEN=your-atlassian-scim-token
ATLASSIAN_ORG_ID=your-org-id
ATLASSIAN_API_TOKEN=your-api-token
ATLASSIAN_EMAIL=admin@yourdomain.com

# GitHub
GITHUB_APP_ID=123456
GITHUB_APP_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----
GITHUB_INSTALLATION_ID=12345678
GITHUB_ORG_NAME=your-org

# Zoom
ZOOM_ACCOUNT_ID=your-account-id
ZOOM_CLIENT_ID=your-client-id
ZOOM_CLIENT_SECRET=your-client-secret

# HubSpot
HUBSPOT_PRIVATE_APP_TOKEN=your-private-app-token
HUBSPOT_PORTAL_ID=12345678

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# Feature Flags
FEATURE_DRY_RUN=true
FEATURE_BULK_IMPORT=false
FEATURE_WEBHOOK_LISTENERS=false

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# Default Values
DEFAULT_ORG_UNIT=/
DEFAULT_LICENSE_SKU=Google-Apps-For-Business
DEFAULT_SLACK_CHANNELS=general,random
DEFAULT_GITHUB_TEAMS=developers
DEFAULT_MS365_USAGE_LOCATION=US